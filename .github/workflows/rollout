name: CI

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3

      # Install dependencies and build your project
      - name: Install dependencies and build project
        run: |
          npm install
          npm run build

      # Start the server
      - name: Start start
        run: npm run start
        background: true

      # Serve the Vite App
      - name: Vite
        run: npm run serve
        background: true

      # Wait for the server to start
      - name: Wait for server to start
        run: sleep 3

      # Run tests or other checks if needed
      # - name: Run tests
      #   run: npm test

      # Print a message indicating the server is running
      - name: Server is running
        run: echo "Server is running"

      # Add more actions as needed, such as deploying the built files to a hosting service
